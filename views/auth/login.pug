extends ../layout

block content
  h2 Iniciar sesión
  form(action="/auth/login" method="POST")
    .mb-2
      label Email
      input.form-control(type="email" name="email" required)
    .mb-2
      label Contraseña
      input.form-control(type="password" name="password" required)
    button.btn.btn-primary.mt-2(type="submit") Ingresar
  a.btn.btn-secondary.mt-3.ms-2(href="/") Volver al inicio
