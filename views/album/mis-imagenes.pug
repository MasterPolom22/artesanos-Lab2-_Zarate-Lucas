extends ../layout

block content
  h2 Mis Imágenes

  a.btn.btn-success.mb-3(href="/album/subir") Subir nueva imagen
  a.btn.btn-secondary.mb-3.ms-2(href="/perfil") Volver al perfil

  if imagenes.length
    .row
      each imagen in imagenes
        .col-md-4.mb-4
          .card
            img.card-img-top(src=imagen.url)
            .card-body
              h5.card-title= imagen.titulo
              p.card-text= imagen.descripcion
              small.text-muted Álbum: #{imagen.album_titulo}
              form(action=`/album/imagen/eliminar/${imagen.id_imagen}` method="POST")
                button.btn.btn-sm.btn-outline-danger.mt-2(type="submit" onclick="return confirm('¿Eliminar esta imagen?')") Eliminar
  else
    p Todavía no subiste imágenes.